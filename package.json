{
  "name": "@iel/axios-extension",
  "private": true,
  "version": "0.0.0",
  "description": "Extend extra functionality for axios.",
  "main": "lib/index.js",
  "types": "",
  "files": [
    "lib",
    "types",
    "README.md"
  ],
  "keywords": [
    "axios",
    "axios-extension"
  ],
  "author": "leihao",
  "license": "MIT",
  "repository": "https://github.com/iel-h/axios-extension.git",
  "homepage": "https://github.com/iel-h/axios-extension",
  "bugs": "https://github.com/iel-h/axios-extension/issues",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev:lib": "esbuild ./src/index.ts --external:localforage --bundle --outfile=./lib/index.js --format=esm --target=es6 --watch",
    "dev:web": "pnpm dev --dir ./examples",
    "build": "pnpm build:lib && pnpm build:dts",
    "build:lib": "rimraf ./lib && ts-node --project ./tsconfig.node.json ./scripts/build.ts",
    "build:dts": "tsc -p ./tsconfig.lib.json",
    "fmt": "pnpm fmt:code && pnpm fmt:fix",
    "fmt:code": "prettier -w ./src/**/*.ts --no-error-on-unmatched-pattern",
    "fmt:fix": "eslint --fix --no-error-on-unmatched-pattern ./src/**/*.ts",
    "test": "pnpm test"
  },
  "peerDependencies": {
    "axios": ">=0.26.1",
    "localforage": ">=1.10.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "axios": "^0.26.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.1",
    "localforage": "^1.10.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
