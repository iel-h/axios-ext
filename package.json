{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "preplop": "esbuild --bundle ./plopfile.ts --format=esm --outfile=./plopfile.mjs --platform=node",
    "plop": "plop & rimraf ./plopfile.mjs",
    "postplop": "pnpm i",
    "dev": "pnpm -C ./packages/axios-ext-example dev",
    "prebuild": "rimraf packages/**/dist",
    "build": "node ./scripts/build.mjs",
    "build:r": "pnpm build -r",
    "fmt": "pnpm fmt:code && pnpm fmt:fix",
    "fmt:code": "prettier --write ./packages/**/*.ts",
    "fmt:fix": "eslint --fix ./packages/**/*.ts",
    "clean": "rimraf node_modules **/*/node_modules",
    "version-packages": "changeset version",
    "prerelease": "pnpm build:r",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "esbuild": "^0.14.32",
    "eslint": "7.32",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "plop": "^3.0.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "axios": "^0.26.1"
  }
}
